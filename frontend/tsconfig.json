{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@wails/*": ["wailsjs/*"] // Map Wails bindings
    },
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "wailsjs/**/*.ts" // Include Wails bindings
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}